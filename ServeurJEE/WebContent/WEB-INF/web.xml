<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>ServeurJEE</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <servlet-name>receptionJSON</servlet-name>
    <servlet-class>com.surveillance.tp.servlets.receptionJSON</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>receptionJSON</servlet-name>
    <url-pattern>/receptionJSON</url-pattern>
  </servlet-mapping>
  
  <servlet>    
    <servlet-name>formUtilisateur</servlet-name>
    <servlet-class>com.surveillance.tp.servlets.formUtilisateur</servlet-class>
  </servlet> 
  <servlet-mapping>    
    <servlet-name>formUtilisateur</servlet-name>
    <url-pattern>/formUtilisateur</url-pattern>
  </servlet-mapping> 
   
  <servlet>    
    <servlet-name>formExamen</servlet-name>
    <servlet-class>com.surveillance.tp.servlets.formExamen</servlet-class>
  </servlet> 
  <servlet-mapping>    
    <servlet-name>formExamen</servlet-name>
    <url-pattern>/formExamen</url-pattern>
  </servlet-mapping>
  
  <listener>
    <listener-class>com.surveillance.tp.config.InitialisationDAOFactory</listener-class>
  </listener>

</web-app>